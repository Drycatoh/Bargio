@page

@inject SignInManager<IdentityUserDefaultPwd> SignInManager
@inject UserManager<IdentityUserDefaultPwd> UserManager

@model Bargio.Areas.User.Pages.RechargementModel

@{
    ViewData["Title"] = "Recharger son compte";
}

@section IncludeHead {
    <link rel="stylesheet" href="/css/style.css">
}

<div class="container">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-3">
            <div class="mx-auto margin-top">
                <form id="lydiaForm" method="post">
                    <label class="text-danger">@Model.LydiaErrorMessage</label>
                    <div class="form-group text-box1">
                        <input asp-for="Telephone" type="text" class="form-control">
                        <label asp-for="Telephone"></label><br>
                        <span asp-validation-for="Telephone" class="text-danger"></span>
                    </div>
                    <div class="form-group text-box1">
                        <input asp-for="Montant" type="text" class="form-control">
                        <label asp-for="Montant"></label><br>
                        <span asp-validation-for="Montant" class="text-danger"></span>
                    </div>
                    <a href="javascript:{}" onclick="document.getElementById('lydiaForm').submit();">
                        <img class="full-width" src="https://homologation.lydia-app.com/assets/img/paymentbutton.png" />
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>